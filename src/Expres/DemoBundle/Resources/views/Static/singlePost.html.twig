{% extends 'ExpresDemoBundle:Static:blog.html.twig'%}


{% block main -%}


<div class="panel panel-default">
  <div class="panel-body">
    <p>

        <h2> <a href="{{path('blog_article',{'id': entity.id})}}"> {{ entity.title }} </a> </h2>
        <h5> Created on: {% if entity.date %}{{ entity.date|date('Y. m. d.') }}{% endif %} | 
        Category: {{ entity.blogcategories }}</h5>
        <hr>
        
        <p> {{ entity.content|raw }} </p>

        <!-- <h6> Tags: <span class="label label-success"> {{ entity.tags }}</span> </h6> -->
        <!-- <a href="#" class="btn btn-default"> Read more... </a> -->

        <!-- {{ entity.category }}

        {{ entity.tags }} -->
      </p>
        </div>
        <div class="panel-footer">

          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-8">
            <!-- TAGS DISPLAY WITH LINKS -->
              <p class="text-left"> Tags: 
                 
                 
                  <!-- {{ entity.tags }} -->

                  {% set tags = entity.tags|split(',') %}
                  {% for tags in tags %}
                  
                    <span class="badge">
                      {{ tags }}
                    </span>      
                  
                  {% endfor %}
                 </p>

            </div>
            <div class="col-xs-6 col-md-4">
              <p class="text-right">
              <a href="{{ path('blog_home') }}" class="btn btn-outline btn-default">
                <i class="fa fa-chevron-left"></i> Go back to the blog homepage
              </a>
            </div>
          </div>
          
          
        </div>
      </div>

COMMENTS

{% endblock %}