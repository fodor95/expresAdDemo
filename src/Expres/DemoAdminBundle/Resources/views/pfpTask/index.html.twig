{% extends '::base.html.twig' %}

{% block body -%}
    <h1>pfpTask list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Created</th>
                <th>Name</th>
                <th>Shortdescribtion</th>
                <th>Header</th>
                <th>Progress</th>
                <th>Projectid</th>
                <th>Stateid</th>
                <th>Place</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pfptask_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortDescribtion }}</td>
                <td>{{ entity.header }}</td>
                <td>{{ entity.progress }}</td>
                <td>{{ entity.projectID }}</td>
                <td>{{ entity.stateID }}</td>
                <td>{{ entity.place }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pfptask_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pfptask_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pfptask_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
