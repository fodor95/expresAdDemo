{% extends 'ExpresDemoAdminBundle:Page:main.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <!-- DATA TABLES  -->
    <script src="{{ asset('admin/bower_components/DataTables/media/js/jquery.dataTables.min.js') }}"> </script>
    
    <script src="{{ asset('admin/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js') }}"> </script>
    
    <script type="text/javascript">
        $(document).ready( function () {
            $('#table').DataTable();
        } );
    </script>
    
{% endblock %}


{% block navbar %}
<a href="{{ path('blogcategories_new') }}" type="button" class="btn btn-success"  class="pull-right">
<i class="fa fa-file-o"></i> New Category
</a> 
{% endblock %}

{% block main -%}

<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Blog categories</h1>
        </div>
        <!-- /.col-lg-12 -->
</div>
<!-- /.row -->




    

    <table class="table table-striped table-bordered table-hover display" id="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('blogcategories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>

                    <!-- EDIT -->
                    <a href="{{ path('blogcategories_edit', { 'id': entity.id }) }}" 
                        type="button" 
                        class="btn btn-primary btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Edit">
                    <i class="fa fa-pencil"></i>
                    </a>

                    <!-- SEE -->
                    <a href="{{ path('blogcategories_show', { 'id': entity.id }) }}" 
                        type="button" 
                        class="btn btn-info btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Read">
                    <i class="fa fa-eye"></i>
                    </a>
                    
                    <!-- DELETE -->
                    <a href="{{ path('blogcategories_sdelete', { 'id': entity.id }) }}" 
                        type="button" 
                        class="btn btn-danger btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Delete">
                    <i class="fa fa-times-circle-o"></i>
                    </a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




    

    {% endblock %}
