{% extends 'ExpresDemoAdminBundle:Page:main.html.twig' %}

{% block navbar %}
<a href="{{ path('administrator_newslettertemplates_new') }}" type="button" class="btn btn-success"  class="pull-right">
<i class="fa fa-file-o"></i> New Template
</a>
{% endblock %}


{% block main -%}
<div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Newsletter Templates</h1>
        </div>
        <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Subject</th>
                <th>Content</th>
                <th>Created</th>
                <th>Manage</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('administrator_newslettertemplates_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('administrator_newslettertemplates_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td><a href="{{ path('administrator_newslettertemplates_edit', { 'id': entity.id }) }}"> {{ entity.content|slice(0,25) }}... </a></td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <!-- EDIT -->
                    <a href="{{ path('administrator_newslettertemplates_edit', { 'id': entity.id }) }}" 
                        type="button" 
                        class="btn btn-primary btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Edit">
                    <i class="fa fa-pencil"></i>
                    </a>
                    <!-- SEE -->
                    <a href="{{ path('administrator_newslettertemplates_show', { 'id': entity.id }) }}" 
                        type="button" 
                        class="btn btn-info btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Read">
                    <!-- <i class="fa fa-eye"></i> -->
                    <span class="glyphicon glyphicon-eye-open"></span>
                    </a>
                    <!-- SEND -->
                    <a href="{{ path('newsletter_sender', { 'template': entity.id }) }}" 
                        type="button" 
                        class="btn btn-success btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Send">
                    <i class="fa fa-envelope-o"></i>
                    </a>
                    
                    <!-- DELETE -->
                    <a href="{{ path('administrator_newslettertemplates_sdelete', { 'id': entity.id }) }}" 
                        type="button" 
                        class="btn btn-danger btn-circle"
                        data-toggle="tooltip" data-placement="top" title="Delete">

                    <i class="fa fa-times-circle-o"></i>
                    </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>





</div>


    {% endblock %}


